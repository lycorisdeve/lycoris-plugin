{
  "files.encoding": "utf8",
  "files.autoGuessEncoding": false,
  "terminal.integrated.defaultProfile.windows": "PowerShell UTF-8",
  "terminal.integrated.profiles.windows": {
    "PowerShell UTF-8": {
      "source": "PowerShell",
      "args": [
        "-NoExit",
        "-Command",
        "chcp 65001 > $null; $utf8NoBom=[System.Text.UTF8Encoding]::new($false); [Console]::InputEncoding=$utf8NoBom; [Console]::OutputEncoding=$utf8NoBom; $OutputEncoding=$utf8NoBom"
      ]
    }
  }
}
